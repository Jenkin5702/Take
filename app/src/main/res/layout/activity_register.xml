<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/fl_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_gray" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />


    <LinearLayout
        android:id="@+id/username_and_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_register"
        android:layout_margin="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_register"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/realname_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="真实姓名"
            android:inputType="phone" />

        <EditText
            android:id="@+id/username_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名" />

        <EditText
            android:id="@+id/uid_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="学号" />

        <EditText
            android:id="@+id/password_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_and_password"
        android:layout_margin="24dp"
        android:background="@drawable/translucant"
        android:text="注册" />
</RelativeLayout>